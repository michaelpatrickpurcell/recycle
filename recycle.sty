	      (-\cardwidth/2 - \bleed, \cardheight/2 + \bleed) --%
	      (\cardwidth/2 + \bleed, \cardheight/2 + \bleed) --%
	      (\cardwidth/2 + \bleed, -\cardheight/2 - \bleed) --%
	      (-\cardwidth/2 - \bleed, -\cardheight/2 - \bleed) --%
	      cycle;
	\pic () at (0,0) {cardbackpattern={black}};
	% Cutting guides for corners of the cards	
%	\pic () at (0,0) {cutguide={black}};
\end{scope}
}}


